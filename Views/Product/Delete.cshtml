@model ABCRetailApp.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ABCRetailApp</title>
    <!-- Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Custom styling for the body */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #6495ED; /* Cornflower blue background */
            padding: 20px;
        }

        /* Container for page content */
        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Header styling with red color to emphasize deletion */
        h1 {
            color: #dc3545; /* Red color */
            text-align: center;
            font-weight: bold;
            margin-bottom: 20px;
        }

        /* Warning message styling */
        h3 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.25rem;
            color: #343a40;
        }

        /* Product name styling */
        h4 {
            text-align: center;
            margin-bottom: 30px;
            color: #007bff;
        }

        /* Definition list styling */
        dl.row {
            margin-bottom: 20px;
        }

        /* Term in definition list styling */
        dt {
            font-weight: bold;
            color: #495057;
        }

        /* Description in definition list styling */
        dd {
            color: #343a40;
            margin-bottom: 10px;
        }

        /* Button styling */
        .btn {
            padding: 10px 20px;
            border-radius: 4px;
            font-weight: 500;
            margin: 5px;
            width: 150px;
            text-align: center;
        }

        /* Danger button styling */
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            /* Danger button hover effect */
            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            }

        /* Secondary button styling */
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            /* Secondary button hover effect */
            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            }

        /* Center-aligned text */
        .text-center {
            text-align: center;
        }

        /* Styling for product image container */
        .product-image-container img {
            max-width: 300px; /* Restrict the size of the image */
            height: auto;
        }
    </style>
</head>

<body>

    <!-- Main container for content -->
    <div class="container">
        <!-- Page title with trash icon -->
        <h1><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h1>

        <!-- Warning message asking for confirmation -->
        <h3><i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this product?</h3>

        <!-- Product details section -->
        <div>
            <h4>@Model.ProductName</h4>
            <dl class="row">
                <!-- Product description -->
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <!-- Product price formatted as currency -->
                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <!-- Product image -->
                <dt class="col-sm-3">Image</dt>
                <dt class="col-sm-2">Image</dt>
                <dd class="col-sm-10">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.ProductName" style="max-width: 300px;" />
                    }
                </dd>
            </dl>
        </div>

        <!-- Form for deletion confirmation -->
        <div class="text-center">
            <form asp-action="DeleteConfirmed" method="post">
                <!-- Hidden inputs to pass product keys to the server -->
                <input type="hidden" name="RowKey" value="@Model.RowKey" />
                <input type="hidden" name="PartitionKey" value="@Model.PartitionKey" />
                <!-- Delete button -->
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <!-- Back to list button -->
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>

    <!-- JavaScript and dependencies for Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>
