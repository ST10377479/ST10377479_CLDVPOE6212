@model ABCRetailApp.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ABCRetailApp</title>
    <!-- Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Custom styling for the body */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #6495ED; /* Cornflower blue background */
            padding: 20px;
        }

        /* Container for form styling */
        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Heading styling */
        h1 {
            color: #343a40;
            margin-bottom: 20px;
            text-align: center;
            font-weight: bold;
        }

        /* Form group styling */
        .form-group {
            margin-bottom: 15px;
        }

        /* Label styling */
        .form-label {
            font-weight: bold;
            color: #495057;
        }

        /* Input and textarea styling */
        .form-control {
            padding: 10px;
            border-radius: 4px;
        }

        /* File input styling */
        .form-control-file {
            border: 1px solid #ced4da;
            border-radius: 4px;
            padding: 10px;
        }

        /* Validation error message styling */
        .text-danger {
            font-size: 0.875em;
        }

        /* Button styling */
        .btn {
            margin-top: 10px;
            padding: 10px 20px;
            border-radius: 4px;
            font-weight: 500;
        }

        /* Primary button styling */
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            /* Primary button hover effect */
            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            }

        /* Secondary button styling */
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            /* Secondary button hover effect */
            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            }

        /* Icon styling in form labels */
        .form-icon {
            margin-right: 8px;
            color: #007bff;
        }
    </style>
</head>

<body>

    <!-- Main container for form -->
    <div class="container">
        <h1><i class="fas fa-box-open"></i> @ViewData["Title"]</h1>

        <!-- Form for creating a product -->
        <form asp-action="Create" enctype="multipart/form-data">
            <!-- Product Name input field -->
            <div class="form-group">
                <label asp-for="ProductName" class="form-label">
                    <i class="fas fa-tag form-icon"></i> Product Name
                </label>
                <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <!-- Description input field -->
            <div class="form-group">
                <label asp-for="Description" class="form-label">
                    <i class="fas fa-align-left form-icon"></i> Description
                </label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter product description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Price input field -->
            <div class="form-group">
                <label asp-for="Price" class="form-label">
                    <i class="fas fa-dollar-sign form-icon"></i> Price
                </label>
                <input asp-for="Price" class="form-control" placeholder="Enter product price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Image upload field -->
            <div class="form-group">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input type="file" name="imageFile" class="form-control-file" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Create
            </button>
        </form>

        <!-- Link to go back to the product list -->
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- JavaScript and dependencies for Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>
